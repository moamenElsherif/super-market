<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorSecondaryContainer">@color/orange_40</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.SuperMarket">
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>